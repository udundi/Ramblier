<div style="background-color: {{ block.settings.background_color }};" class="tw-w-full tw-max-w-screen-3xl tw-flex  tw-flex-col {% if block.settings.image_position == 'right' %} md:tw-flex-row {% else %} md:tw-flex-row-reverse {% endif %} tw-items-center tw-justify-between tw-mx-auto {%  if block.settings.row_shrink == blank %} 2xl:tw-h-[620px] lg:tw-h-[500px] tw-h-fit {% else %} tw-h-96 {% endif %} tw-items-stretch tw-border-b">
  <!-- Text Half -->
  <div class="tw-w-full tw-flex {% if block.settings.align == 'center' %} tw-justify-center {% elsif block.settings.align == 'end' %} tw-justify-end {% elsif block.settings.align == 'start' %} tw-justify-start {% endif %} {% if block.settings.image_position == 'right' %} tw-border-r {% else %} tw-border-l {% endif %}">
    <!-- Text Container -->
    <div style="max-width: {{ block.settings.max_width }}px;" class="tw-flex tw-flex-col tw-p-10 tw-gap-8 tw-text-black tw-w-full">
      {% content_for 'blocks' %}
    </div>
  </div>
  <!-- Image Half -->
  <div class="tw-w-full {%  if block.settings.row_shrink != blank %} tw-h-96 {% endif %}">
    <!-- Image Classes -->
    {% if block.settings.row_shrink %}
      {% assign image_classes = 'tw-w-full tw-h-full tw-object-contain' %}
    {% else %}
      {% assign image_classes = 'tw-w-full tw-h-full tw-object-cover' %}
    {% endif %}
    {% if block.settings.image != blank %}
      <!-- Image -->
      {{ block.settings.image
        | image_url: width: 2000
        | image_tag: class: image_classes
      }}
      {% else %}
      <!-- Placeholder Image -->
      <div class="tw-p-8 tw-w-full tw-h-full">
        {{ 'lifestyle-1' | placeholder_svg_tag: image_classes }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Image Text Pair",
    "tag": "div",
    "class": "tw-w-full",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "align",
        "label": "Alignment",
        "options": [
          {
            "value": "start",
            "label": "Start"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "end",
            "label": "End"
          }
        ],
        "default": "center"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "checkbox",
        "id": "row_shrink",
        "label": "Shrink Row",
        "default": false
      },
      {
        "type": "range",
        "id": "max_width",
        "label": "Box Max Width",
        "min": 300,
        "max": 1000,
        "step": 10,
        "default": 600
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Image Position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      }
    ],
    "blocks": [
      {
        "type": "text"
      },
      {
        "type": "button"
      },
      {
        "type": "rich-text"
      }
    ],
    "presets": [
      {
        "name": "Image Text Pair",
        "blocks": [
          {
