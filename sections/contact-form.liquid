<style>
  .ud-form :is(input, textarea, select) {
    background-color: white;
    border: 1px solid #d0cfcf;
    padding-block: 0.75rem;
    padding-inline: 1.5rem;
    flex-grow: 1;
  }

  .ud-form > div {
    display: flex;
    flex-direction: column-reverse;
    row-gap: 0.5rem;
  }

  .ud-form label {
    font-family: Poppins;
    color: black;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .ud-form label {
      font-size: 0.875rem;
    }
  }

  .ud-form :is(input, textarea, select)[required] + label::after {
    content: ' *';
    color: #d40000;
  }

  .ud-form select:invalid {
    color: rgb(0 0 0 / 0.4);
  }
</style>

<div class="section-{{ section.id }}-padding tw-bg-[#ECEAE5] tw-bg-opacity-25 tw-px-5 tw-pb-40 tw-pt-24">
  <div class="">
    {%- if section.settings.heading != blank -%}
      <h2 class="tw-text-center tw-font-noto tw-text-24 tw-font-semibold md:tw-text-36">
        {{ section.settings.heading }}
      </h2>
    {%- else -%}
      <h2 class="tw-text-center tw-font-noto tw-text-24 tw-font-semibold md:tw-text-36">
        {{ 'templates.contact.form.title' | t }}
      </h2>
    {%- endif -%}
    {%- form 'contact',
      id: 'ContactForm',
      class: 'ud-form tw-grid md:tw-grid-cols-2 tw-gap-x-8 tw-max-w-4xl tw-mx-auto tw-gap-y-5 tw-mt-10 md:tw-mt-14'
    -%}
      {%- if form.posted_successfully? -%}
        <h2 class="" tabindex="-1" autofocus>
          {{- 'icon-success.svg' | inline_asset_content -}}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="">
          <h2 class="" role="alert" tabindex="-1" autofocus>
            {{- 'icon-error.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="" role="list">
          <li>
            <a href="#ContactForm-email" class="">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}

      <!-- FIRST NAME -->
      <div>
        <input
          class=""
          autocomplete="given-name"
          type="text"
          id="ContactForm-given-name"
          name="contact[First Name]"
          value="{% if form.first_name %}{{ form.first_name }}{% elsif customer %}{{ customer.first_name }}{% endif %}"
          placeholder="Jane"
          required
        >
        <label for="ContactForm-given-name">First Name</label>
      </div>

      <!-- LAST NAME -->
      <div>
        <input
          class=""
          autocomplete="family-name"
          type="text"
          id="ContactForm-family-name"
          name="contact[Last Name]"
          value="{% if form.last_name %}{{ form.last_name }}{% elsif customer %}{{ customer.last_name }}{% endif %}"
          placeholder="Doe"
          required
        >
        <label class="" for="ContactForm-family-name">Last Name</label>
      </div>

      <!-- COMPANY -->
      <div>
        <input
          class=""
          autocomplete="organization"
          type="text"
          id="ContactForm-organization"
          name="contact[Company]"
          placeholder="ABC Company"
          required
        >
        <label class="" for="ContactForm-organization">Company</label>
      </div>

      <!-- WEBSITE -->
      <div>
        <input
          class=""
          autocomplete="url"
          type="text"
          id="ContactForm-website"
          name="contact[Website]"
          placeholder="www.example.com"
          required
        >
        <label class="" for="ContactForm-website">Website</label>
      </div>

      <!-- EMAIL ADDRESS -->
      <div>
        <input
          autocomplete="email"
          type="email"
          id="ContactForm-email"
          class=""
          name="contact[email]"
          spellcheck="false"
          autocapitalize="off"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          aria-required="true"
          required
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ContactForm-email-error"
          {% endif %}
          placeholder="{{ 'templates.contact.form.email' | t }}"
        >
        <label class="" for="ContactForm-email">Email</label>
        {%- if form.errors contains 'email' -%}
          <small class="" id="ContactForm-email-error">
            <span class="">{{ 'accessibility.error' | t }}</span>
            <span class="">
              <span class="">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </span>
          </small>
        {%- endif -%}
      </div>

      <!-- PHONE NUMBER -->
      <div>
        <input
          type="tel"
          id="ContactForm-phone"
          class=""
          autocomplete="tel"
          name="contact[{{ 'templates.contact.form.phone' | t }}]"
          pattern="[0-9\-]*"
          value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          placeholder="XXX-XXX-XXXX"
        >
        <label class="" for="ContactForm-phone">Phone Number</label>
      </div>

      <!-- GETTING TO KNOW YOU -->
      <div class="md:tw-col-span-2">
        <select id="ContactForm-getting-to-know" name="contact[Getting to Know You]" required>
          <option selected disabled value="">Which best describes you...</option>
        </select>
        <label class="" for="ContactForm-getting-to-know">Getting to Know You...</label>
      </div>

      <!-- PRODUCT CATEGORY -->
      <div class="">
        <select id="ContactForm-product-category" name="contact[Product Category]" class="" required>
          <option selected disabled value="">Please select...</option>
        </select>
        <label class="" for="ContactForm-product-category">Product Category</label>
      </div>

      <!-- MARKETING BUDGET -->
      <div class="">
        <select id="ContactForm-marketing-budget" name="contact[Marketing Budget]" class="" required>
          <option selected disabled value="">Please select...</option>
        </select>
        <label class="" for="ContactForm-marketing-budget">Marketing Budget</label>
      </div>

      <!-- MESSAGE -->
      <div class="md:tw-col-span-2">
        <textarea
          rows="10"
          id="ContactForm-body"
          class=""
          name="contact[{{ 'templates.contact.form.comment' | t }}]"
          placeholder="{{ 'templates.contact.form.comment' | t }}"
        >
          {{- form.body -}}
        </textarea>
        <label class="" for="ContactForm-body">
          {{- 'templates.contact.form.comment' | t -}}
        </label>
      </div>

      <!-- AGREEMENT CHECKBOX -->
      <div class="">
        <input
          type="checkbox"
          id="ContactForm-agreement"
          class=""
          name="contact[Marketing Agreement]"
          checked
        >
        <label class="" for="ContactForm-agreement"> I agree to receive marketing news by email</label>
      </div>

      <!-- SUBMIT BUTTON -->
      <div class="">
        <button type="submit" class="">
          {{ 'templates.contact.form.send' | t }}
        </button>
      </div>
    {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
